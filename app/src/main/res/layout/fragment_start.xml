<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.2"
        android:src="@drawable/logo_wordest"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/fragment_start_button_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_button_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.6"
        style="@style/button_font_berlinSansFB"
        android:textColor="@color/main_background"
        android:text="@string/Start"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/fragment_start_textview_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        android:gravity="center"
        style="@style/textView_font_bahnschrift"
        android:textSize="12sp"
        android:textColor="@color/text_version"
        android:textStyle="italic"/>

</androidx.constraintlayout.widget.ConstraintLayout>