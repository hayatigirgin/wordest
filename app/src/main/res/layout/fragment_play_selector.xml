<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_activityMain_word_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opaque_background"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@drawable/background_word_info">

        <Button
            android:id="@+id/fragmentPlaySelector_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:background="@drawable/background_button_start"
            android:text="@string/EXERCISE"
            android:textSize="20sp"
            android:textStyle="bold"
            style="@style/button_font_bahnschrift"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/inactiveTexts"/>

        <Button
            android:id="@+id/fragmentPlaySelector_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/background_button_start"
            android:text="@string/TEST"
            android:textSize="20sp"
            android:textStyle="bold"
            style="@style/button_font_bahnschrift"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>